<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="storeSQL">
	<!-- 호텔 리스트 -->
	<select id="getHotelList" resultType="hotel">
		SELECT * FROM hotel_content
	</select>
	
	<!-- 호텔 뷰 -->
	<select id="getHotelView" parameterType="int" resultType="hotel">
		SELECT * FROM hotel_content WHERE hnb = #{hnb}
	</select>
	<select id="getHotelImageView" parameterType="int" resultType="hotelImage">
		SELECT * FROM hotel_images WHERE hnb = #{hnb}
	</select>
	<select id="getHotelRoomView" parameterType="int" resultType="hotelRoom">
		SELECT * FROM hotel_rooms WHERE hnb = #{hnb}
	</select>
</mapper>