<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="essaySQL">
    <select id="getAll" resultType="essay">
        SELECT * FROM essay
    </select>

    <select id="getOne" parameterType="int" resultType="essay">
        SELECT * FROM essay WHERE rno = #{rno}
    </select>

    <insert id="create" parameterType="essay">
        INSERT INTO essay VALUES(bno.nextVal, rno.nextVal, #{nickname}, #{title}, 0, 0, #{hashtag}, sysdate, sysdate, 0, #{location}, #{lat}, #{lng}, #{content}, #{fixed})
    </insert>
</mapper>